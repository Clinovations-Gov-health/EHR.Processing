{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "strict": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "baseUrl": "./",
        "incremental": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "plugins": [
            { "transform": "typescript-is/lib/transform-inline/transformer" }
        ]
    },
    "exclude": ["node_modules", "dist"]
}